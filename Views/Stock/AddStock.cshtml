@model EntityLayer.Concrete.Stock

@{
    ViewData["Title"] = "Stok Listesi";
    Layout = "~/Views/Shared/_UILayout.cshtml";

}

<style>
    form {
        margin: 0 auto;
        padding: 10px;
        width: 50%;
    }

    h1 {
        margin: 20px 0;
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    button {
        margin-top: 15px;
    }
</style>
<h1>Yeni Stok Ekleme Sayfası</h1>

<form method="post">
    <div class="form-group">
        @Html.Label("Ürün Seçin")
        <select asp-for="ProductID" class="form-control" asp-items="ViewBag.Products">
            <option value="">Ürün Seçiniz</option>
        </select>
        @Html.ValidationMessageFor(model => model.ProductID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Depo Seçin")
        <select asp-for="WarehouseID" class="form-control" asp-items="ViewBag.Warehouses">
            <option value="">Depo Seçiniz</option>
        </select>
        @Html.ValidationMessageFor(model => model.WarehouseID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Miktar")
        <input type="number" asp-for="Quantity" class="form-control" />
        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="StockMovementType">Stok Hareket Türü</label>
        <select asp-for="StockMovementType" class="form-control">
            <option value="Giriş">Giriş</option>
            <option value="Çıkış">Çıkış</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Date">Tarih</label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Stok Ekle</button>
</form>
