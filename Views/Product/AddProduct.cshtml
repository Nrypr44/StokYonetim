@model EntityLayer.Concrete.Product

@{
    ViewData["Title"] = "Ürün Ekle";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<style>
    form {
        margin: 0 auto;
        padding: 10px;
        width: 50%;
    }

    h1 {
        margin: 20px 0;
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    button {
        margin-top: 15px;
    }
</style>

<h1>Yeni Ürün Ekleme Sayfası</h1>

<form method="post">
    <div class="form-group">
        @Html.Label("Ürün Adı")
        <input type="text" asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Fiyat")
        <input type="number" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Açıklama")
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Kategori")
        <input type="text" asp-for="Category" class="form-control" />
        @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("SKU (Stok Kodu)")
        <input type="text" asp-for="SKU" class="form-control" />
        @Html.ValidationMessageFor(model => model.SKU, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-outline-primary">Ürünü Ekle</button>
</form>
