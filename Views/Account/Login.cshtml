@model InventoryManagement.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link rel="stylesheet" href="~/registercss/register.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="left-panel">
        <h1>Tekrar Hoş Geldiniz</h1>
        <p>Depo ve stok takibinizi yönetmek için hesabınıza giriş yapın. İşlerinizi kolaylaştırmak için buradayız!</p>
    </div>
    <div class="right-panel">
        <h2>Giriş Yap</h2>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <input asp-for="Username" placeholder="Kullanıcı adı veya Email" required>
                <i class="icon fas fa-user"></i>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" id="password" placeholder="Şifre" required autocomplete="current-password">
                <i class="icon fas fa-eye" onclick="togglePassword('password', this)"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
          
            <button type="submit">Giriş Yap</button>
            <div class="alternate">
                <span>Hesabınız yok mu?</span>
                <a asp-action="Register" class="btn btn-link">Kayıt Ol</a>
            </div>
        </form>
    </div>

    <script>
        function togglePassword(inputId, icon) {
            const input = document.getElementById(inputId);
            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("fa-eye", "fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("fa-eye-slash", "fa-eye");
            }
        }
    </script>
</body>
</html>
